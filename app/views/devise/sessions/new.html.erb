<div id="LoginForm">
  <div class="container">
    <h1 class="form-heading"></h1>

    <div class="login-form">
      <div class="main-div">
        <div class="panel">
          <h2>Đăng nhập</h2>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Email" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "Mật khẩu" %>
        </div>
        <div class="forgot">
          <%= link_to "Đăng ký", new_registration_path(resource_name) %><br />
          <%= link_to "Quên mật khẩu?", new_password_path(resource_name) %><br />
        </div>
        <button type="submit" class="btn btn-primary">Đăng nhập</button>

        <% end %>
      </div>
    </div>
  </div>
</div>
