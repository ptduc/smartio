<div class="row p-3">
<div class="col-md-2 p-2 bg-white rounded shadow-sm">
  <div class="box box-info">

    <div class="box-body">
      <table class="table table-bordered table-hover table-sm">
      <thead class="thead-light text-center">
        <th>Danh sách thiết bị</th>
      </thead>
      <tbody>
        <% @devices.each do |x| %>
          <tr>
            <td class="text-center"><a href="/#"><%= x.code %></a></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>

<div class="col-md-10 p-2 bg-white rounded shadow-sm">
  <div class="box-header with-border">
    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" href="#status" role="tab" data-toggle="tab">Trạng thái</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#control" role="tab" data-toggle="tab">Điều khiển</a>
      </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active p-4" id="status">
        <p>Mã thiết bị 00000010</p>
        <p>Khu vực Trần Quốc Thảo</p>
        <p>Trạng thái</p>
        <table class="table table-bordered table-sm">
              <thead class="thead-light text-center">
                <tr>
                  <th colspan="2" class="text-center">Relay 1</th>
                  <th colspan="2" class="text-center">Relay 2</th>
                  <th colspan="2" class="text-center">Relay 3</th>
                  <th colspan="2" class="text-center">Relay 4</th>
                </tr>
                <tr>
                  <th class="text-center">Mode</th>
                  <th class="text-center">Status</th>
                  <th class="text-center">Mode</th>
                  <th class="text-center">Status</th>
                  <th class="text-center">Mode</th>
                  <th class="text-center">Status</th>
                  <th class="text-center">Mode</th>
                  <th class="text-center">Status</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td class="text-center">Manual</td>
                  <td class="text-center">ON</td>
                  <td class="text-center">Manual</td>
                  <td class="text-center">ON</td>
                  <td class="text-center">Manual</td>
                  <td class="text-center">ON</td>
                  <td class="text-center">Manual</td>
                  <td class="text-center">ON</td>
                </tr>

              </tbody>
        </table>
        <p> Điều khiển </p>
        <p>Bật/Tắt</p>
        <p></p>
      </div>
      <div role="tabpanel" class="tab-pane fade p-4" id="control">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label text-right">Chọn Thiết bị</label>
              <div class="col-sm-7">
                <%= select_tag 'prefecture', options_from_collection_for_select(@devices, 'id', 'code'), include_blank: true, class: 'form-control form-control-sm element-search' %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group row">
              <label class="col-sm-3 col-form-label text-right">Nội dung</label>
              <div class="col-sm-7">
                <textarea class="form-control" rows="5" id="comment"></textarea>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 text-center">
            <button class="btn btn-secondary">Gửi</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>