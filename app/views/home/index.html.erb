<div id="location-areas" class="my-3 p-3 bg-white rounded shadow-sm">
  <div class="box box-info">
    <div class="box-header with-border">
      <h3 class="box-title">Trạng thái thiết bị</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
      <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped table-md">
          <thead class="thead-light text-center">
            <tr>
              <th rowspan="2" class="text-center">ID</th>
              <th rowspan="2" class="text-center">Time</th>
              <th colspan="2" class="text-center">Relay 1</th>
              <th colspan="2" class="text-center">Relay 2</th>
              <th colspan="2" class="text-center">Relay 3</th>
              <th colspan="2" class="text-center">Relay 4</th>
            </tr>
            <tr>
              <th class="text-center">Mode</th>
              <th class="text-center">Status</th>
              <th class="text-center">Mode</th>
              <th class="text-center">Status</th>
              <th class="text-center">Mode</th>
              <th class="text-center">Status</th>
              <th class="text-center">Mode</th>
              <th class="text-center">Status</th>
            </tr>
          </thead>
          <tbody>
            <% @devices.each do |device| %>
            <tr>
              <td class="text-center"><a href="#"><%= device.code %></a></td>
              <td class="text-center"><%= device.status.updated_at&.strftime('%Y/%m/%d %H:%M:%S') %></td>
              <td class="text-center"><%= device.status.relay1_mode %></td>
              <td class="text-center"><%= device.status.relay1_status %></td>
              <td class="text-center"><%= device.status.relay2_mode %></td>
              <td class="text-center"><%= device.status.relay2_status %></td>
              <td class="text-center"><%= device.status.relay3_mode %></td>
              <td class="text-center"><%= device.status.relay3_status %></td>
              <td class="text-center"><%= device.status.relay4_mode %></td>
              <td class="text-center"><%= device.status.relay4_status %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.table-responsive -->
    </div>
    <!-- /.box-body -->
    <div class="box-footer clearfix">
    </div>
    <!-- /.box-footer -->
  </div>
</div>